@tailwind base;
@tailwind utilities;
/* Write your own custom base styles here */

/* Start purging... */
@tailwind components;
/* Stop purging. */

html,
body {
}

/* Write your own custom component styles here */
body {
  overflow-x: hidden;
}

.page-wrap {
  height: 100vh;
}

.img-fade {
  @apply absolute top-0 bottom-0 left-0 right-0 bg-gray-900 opacity-30;
}

.slick-dots li {
  @apply inline-block mr-2;
}

.slick-dots li:last-child {
  @apply mr-0;
}

/* .slick-list { */
/*   @apply md:overflow-visible; */
/* } */

.color-lime {
  @apply text-green-light;
}

.color-black {
  @apply text-black;
}

.element-box {
  height: 360px;
}

.mapboxgl-ctrl-geocoder.mapboxgl-ctrl {
  @apply w-full max-w-none drop-shadow-none;
  box-shadow: none;
}

.mapboxgl-ctrl-geocoder .mapboxgl-ctrl-geocoder--input {
  @apply w-full pl-10 border h-14 form-input;
  border: 1px solid #737373;
}

@screen md {
  .element-box {
    height: 400px;
  }
  .mapboxgl-ctrl-geocoder.mapboxgl-ctrl-geocoder {
    @apply w-full max-w-none;
  }
  .mapboxgl-ctrl-geocoder .mapboxgl-ctrl-geocoder--icon {
    @apply top-4;
  }
}

/* Start purging... */
@tailwind utilities;
/* Stop purging. */

/* Your own custom utilities */

@layer base {
  h1,
  h2,
  h3,
  h4 {
    @apply font-bold uppercase;
    letter-spacing: 2%;
  }
  h1,
  .h1 {
    @apply mb-4 text-6xl md:text-8xl text-green;
  }
  h2,
  .h2 {
    @apply mb-4 text-5xl md:text-7xl text-green;
  }
  h3,
  .h3 {
    @apply mb-3 text-xl md:text-2xl;
  }
  h4,
  .h4 {
    @apply mb-3 text-lg md:text-xl;
  }
  p {
    @apply leading-relaxed;
  }
  h1 > p,
  h2 > p,
  h3 > p,
  h4 > p {
    line-height: 1;
  }
  main > section:first-child {
    @apply pt-36 md:pt-32;
  }
  input,
  select {
    @apply block w-full max-w-sm mb-2 rounded;
  }
  button {
    @apply btn-base btn-secondary;
  }
  label > span > p {
    @apply inline-block pl-2;
  }
}

@layer utilities {
  .label-wrap.is-required + * {
    @apply inline;
  }
  .label-wrap.is-required > *:after {
    content: "*";
  }

  .slick-slide,
  .slick-slide > div {
    height: 100%;
  }

  .in-container {
    @apply container mx-auto md:max-w-screen-xl;
  }

  .btn-base {
    @apply block pt-4 pb-4 text-lg text-center border-none rounded-none transition-colors duration-300;
  }

  .btn-primary {
    @apply text-white bg-red hover:bg-red-dark;
  }

  .btn-secondary {
    @apply text-white bg-green hover:bg-green;
  }

  .btn-link {
    @apply w-auto;
  }

  .btn-outline {
    @apply border border-gray-700 border-solid;
  }

  .feature-column img {
    @apply mx-auto;
  }

  @variants responsive {
    .container-padding {
      @apply px-8 md:px-10;
    }

    .pt-100p {
      padding-top: 100%;
    }

    .h-16-9 {
      height: calc(100vw * 0.5625);
    }

    .max-h-80vh {
      max-height: 80vh;
    }

    .h-above-fold {
      height: calc(100vh - 64px);
    }

    .max-h-above-fold {
      max-height: calc(100vh - 64px);
    }

    .h-center {
      @apply absolute left-1/2 transform -translate-x-2/4;
    }

    .v-center {
      @apply absolute top-1/2 transform -translate-y-2/4;
    }
  }
}

.pageHeadSm * {
  @apply text-[54px] md:text-[59px];
}
.page-connect .pageHeadSm {
  @apply mb-24 sm:mb-4;
}
.pageSubhead {
  @apply max-w-[630px] mx-auto mb-[100px];
}
.pageSubhead * {
  @apply text-[20px];
}
.page-connect .pageSubhead {
  @apply hidden sm:block;
}
.twoCol {
  @apply sm:grid sm:grid-cols-2 gap-x-4;
}
.label-wrap {
  @apply text-green text-[25px] uppercase mb-[27px];
}
.form-input {
  @apply rounded text-[27px] leading-[44px] border-[rgba(0,0,0,0.2)];
}
.form-checkbox {
  @apply w-[33px] h-[33px] rounded;
}
.btn-submit {
  @apply w-full text-white text-[25px] uppercase bg-green hover:bg-green-dark md:w-[305px] rounded mt-[50px];
}

